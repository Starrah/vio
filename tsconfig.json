{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitUseStrict": true,
    "declaration": true,
    "sourceMap": true,
    "newLine": "LF",
    "rootDir": "src",
    "outDir": "bld"
  },
  "exclude": [
    "bld",
    "node_modules"
  ]
}
