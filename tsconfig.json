{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    // "noImplicitReturns": true,
    // "noImplicitThis": true,
    // "noImplicitUseStrict": true,
    "declaration": true,
    "sourceMap": true,
    "newLine": "LF",
    "rootDir": "src",
    "outDir": "bld"
  },
  "exclude": [
    "bld",
    "node_modules"
  ]
}
